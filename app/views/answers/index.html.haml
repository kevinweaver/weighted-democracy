%h1 Listing answers

%table
  %tr
    %th Text
    %th Question
    %thr
    %th
    %th

  - @answers.each do |answer|
    %tr
      %td= link_to answer.text, edit_question_answer_path(@question, answer)
      %td= answer.question_id
      %td= link_to 'Show', question_answer_path(@question, answer)
      %td= link_to 'Destroy', question_answer_path(@question,answer), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Answer', new_question_answer_path(@question)
